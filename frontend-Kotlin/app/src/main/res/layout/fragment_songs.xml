                        android:ellipsize="end"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Â¡Descubre su discografÃ­a!"
                        android:textAlignment="center"/>
