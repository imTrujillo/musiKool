<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MusiKool" parent="Theme.MaterialComponents.Light">
        <item name="android:windowLightStatusBar">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#6750A4</item>
        <item name="colorPrimaryVariant">#472C7A</item>
        <item name="colorOnPrimary">#301D38</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#413D47</item>
        <item name="colorSecondaryVariant">#27252A</item>
        <item name="colorOnSecondary">#45414D</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#AE91C1</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MusiKool.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavbarTitleStyle">
        <item name="android:textColor">#4A148C</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextOnlyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">-10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/purple_700</item>
    </style>

    <!-- Para botones normales (filtros) -->
    <style name="FilterButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Theme.MusiKool.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MusiKool.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>